  <div class="col-md-8">
	<% i = 0 %>
	<% @post.reverse.each do |post| %>
	  <% i += 1 %>
	  <% if post.edited != 1 || post.category != "Community" %>
		<% i -= 1 %>
		<% next %>
	  <% end %>
