			<p><a href="posts/<%= post.id %>" class="thumbnail"><%= image_tag post.image_url.to_s %></a></p>
			<p><strong><%= post.title %></strong></p>
			<p>By: <%= post.author %></p>
			<p><%= post.summary %></p>
			<div class="post-options">
			  <a class="category-community" href="posts/<%= post.id %>">Read More</a>
