<!-- PRIMARY ARTICLES -->

<div class="articles">

<% @posts.reverse.each do |post| %>

<% if post.edited != 1 %>
	<% next %>
<% end %>

<div class="row">
	<div class="col-md-4">
		<div class="post post-1">
			<p><strong><%= post.title %></strong></p>
			<p>By: <%= post.author %></p>
			<p><a class="thumbnail"><%= image_tag post.image_url.to_s %></a></p>
			<p><%= post.summary %></p>
			<div class="post-options">
			  <%= link_to 'Read More', post %>
			</div>
	</div></br></br>
	</div>
	
<% break %>
<% end %>

<!-- NEWS CATEGORY -->
<div class="col-md-4">
<p><strong> News </strong></p>

<% i = 0 %>

<% @posts.reverse.each do |post| %>

<% i += 1 %>

<% if i ==1 %>
  <% next %>
<% end %>

<% if post.edited != 1 || post.category != "News" %>
  <% i -= 1 %>
  <% next %>
<% end %>

	<div class="post post-news">
	  <p><a class="thumbnail"><%= image_tag post.image_url.to_s %></a></p>
	  <p><strong><%= post.title %></strong></p>
	  <p>By: <%= post.author %></p>
	  <p><%= post.summary %></p>
	  <div class="post-options">
		<%= link_to 'Read More', post %>
	  </div>
	</br>
	</br>
	</div>

<% end %>




